{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "flux": {
    "fileMatch": ["clusters/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["clusters/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["flux", "helm-values", "kubernetes"],
      "automerge": false
    }
  ]
}
